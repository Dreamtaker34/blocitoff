<div class="col-md-6">
<h1><%= @user.username.capitalize %>'s Profile</h1>
<p><%= @user.email %></p>
</div>
<div class="container">
  <h4>New To-Do</h4>
  <%= render partial: 'items/form', locals: {user: @user, item: @item} %>
</div>
<br>
<h3>My To-Do List:</h3>
<% @user.items.each do |item| %>
 <%= render partial: 'items/item', locals: {item: item, user: @user} %>
<% end %>
